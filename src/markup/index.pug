extends layout-blocks/layout
block content
	section.header
		.container
			.header-column
				.logo 
					img(src="images/header_logo.png", alt="LOGOTYPE")
				.location 
					img(src="images/header_pin.png", alt="Location") 
					span Jamaica
				button#hamburger.hamburger.hamburger--minus
					span.hamburger-box
						span.hamburger-inner
			.header-column.menu
				ul.top_menu
					li About
					li Products
					li Help
					li Contact
			.header-column.cart
				.top_cart 
					.cart-img
						img(src="images/header_cart.png", alt="Cart") 
					span Cart
			ul.top_social
				li Facebook
				li Google+
				li Odnoklassniki
				li somelse


	section.hero
		.container
			.screener
				h1 Best security <br> services for home <br> & business. 
				.button
					span View products

	section.about
		.container
			h3.title We work hard to <br> bring you the real quality
			h6.link
				span Our story

	section.footer
		.container
			.footer-slogan 
				.logo
					img(src="images/header_logo.png", alt="LOGOTYPE")
				h6.footer_title Best security<br>for home & <br>business. 

			.footer-menu
				ul 
					li
						h6 About
					li
						h6 Products
					li
						h6 Help
					li
						h6 Contact
				ul 
					li 
						h6 Youtube
					li 
						h6 Facebook
					li 
						h6 Twitter
					li 
						h6 Google Plus
		.container
			.footer-copy
				.copy &copy;2017 Copyright. All rights reserved
				.footer-column 
					.button 
						span View products