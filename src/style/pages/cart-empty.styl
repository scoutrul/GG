section.in-cart
	flex-flow: column wrap;
	.container
		align-items: center;
		justify-content: center;
		min-height: 520px;
		flex-flow column nowrap
		&.is-empty
			.title
				color $lightgrey2
				margin: 0 0 4rem;
				font-weight: 900;
				text-transform uppercase
				word-spacing: .3rem;
				line-height: 90%;
				transition $transition
				text-align center
			.link_under
				text_underscore($darkgrey2, $darkgrey2)

		.product_count
			color $lightgrey
			font-size: 30%;
			text-align center
			font-weight: 400;
			margin-bottom: 1rem;
		.accordion_items
			accordion_items()
			.edit, .delete
				position absolute
				right 0
				top .5rem
				z-index 20
				margin: 0 0 0 1rem;
				width: 0.4rem;
				height: 0.4rem;
				cursor: pointer;
				background-repeat: no-repeat;
			.edit
				right 1rem
				background-image: url(../images/icon_edit.svg);
			.delete
				background-image: url(../images/icon_delete.svg);
			header
			main
				.description
					margin -.5rem 0 .5rem 
			ul.items
				padding 0
				li
					display flex
					.header
						font-size: 70%;
						margin-right: 1rem;
		.steps
			display flex
			width 100%
			margin: 1rem 0;
			button:first-child
				margin 0 auto 0 0
				
