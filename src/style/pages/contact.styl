section.contact
	.container
		margin 17.7rem auto 8rem
		@media screen and (max-width: $ipad)
			margin 9.7rem auto 8rem
		.office
			display: flex;
			flex-flow: column wrap;
			margin 1rem auto
			width: 100%;
			address
				margin 2rem 0
				width 100%
				.title
					text-align center
					margin: 2rem 0;
					line-height: 100%;
				.hide
					display none
				.adr
					display: flex;
					flex-flow: column wrap;
					align-items: center;
					justify-content: center;
					span, a
						text_underscore(#DDD, #232323)
				.call,.info
					display: flex;
					flex-flow: column wrap;
					align-items: center;
					justify-content: center;
					font-size: 160%;
					span, a
						text_underscore(#DDD, #232323)
						font-size 100%
						
				.adr
					font-size: 280%;
					font-weight 500
					line-height 150%
					text-align: center;
					.location
						display flex
						span 
							margin 0 .5rem
				.call
					flex-flow row nowrap
					.fax,.tel
						display inline-block
						margin: 0 2rem;
						padding 0
				.info
					margin 3rem 0
					font-size: 160%	
							
		ul.office-tab
			margin 0 auto
			padding 0
			display flex
			flex-flow row wrap
			justify-content: center;
			align-items: center;
			li
				flex 1 0 auto
				white-space nowrap
				margin: 1.6rem;
				cursor: pointer;
				text-align: center;
				@media screen and (max-width: $ipad)
					margin: .6rem;
					
				a
					font-size: 16px;
					transition: $transition 
					&:hover
						color $specialRed
					&:before
						content ''
						width 20px
						height 20px
						display: block;
						margin: 1rem auto;
				&.office-tab--active
					a
						color $specialRed
						&:before
							background-image: url(../images/icon_pin.svg);
							background-repeat: no-repeat;
					
		.social
			display: flex;
			flex-flow: column wrap;
			align-items: center;
			width: 100%;
			justify-content: center;
			text-align: center;
			margin 15rem auto 12rem
			.slogan 
				font-weight: 900;
				line-height: 90%;
				text-transform: uppercase;
				margin: 6rem auto;
			ul.links
				display flex 
				padding 0
				width 100%
				flex-flow row wrap
				justify-content: center;
				margin: 3rem auto;
				li
					min-width: 200px;
					@media screen and (max-width: $ipad)
						margin auto
					a
						text_underscore(#DDD, #232323)
						font-size: 25px !important
						font-weight: 600;
		ul.forces
			margin 1rem auto
			padding 0
			display flex
			flex-flow row wrap
			li
				flex 1 0 25%
				line-height: 230%;
				font-size: 90%;
				@media screen and (max-width: $ipad)
					flex 1 0 50%
				@media screen and (max-width: 400px)
					flex 1 0 100%
				span
					padding 10px
					.force-name
						margin: 1rem 0 1.6rem;
						font-size: 150%;
						font-weight: 600;
					.force-address,.force-tel,.force-fax
						font-weight 300