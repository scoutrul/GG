#choose
	display none
	&.is-active
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		width 100%
		height 100%
		min-width: 100vw;
		min-height: 100vh;
		z-index: 100;
		background: #FFF;
		display: flex;
		flex-flow: column nowrap;
		align-items: center;
		justify-content: center;
		.title
			margin: 35vh auto 2rem auto;
			color: $lightgrey2;
			font-weight: 500;
			font-size: 130%;
			@media screen and (max-width: $iphone6)
				margin 1rem auto auto		
		.button
			margin: auto auto 21vh
			@media screen and (max-width: $iphone6)
				margin auto auto 1rem
		ul
			display: flex;
			padding: 0;
			flex-flow: row wrap;
			justify-content: center;
			@media screen and (max-width: $iphone6)
				overflow auto
			li
				margin: 2rem;
				a
					font-size: 260%;
					font-weight: 600;
					&:hover
						color $specialRed