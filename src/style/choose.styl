#choose
	display none
	&.is-active
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: 100;
		background: #FFF;
		display: flex;
		flex-flow: column wrap;
		align-items: center;
		justify-content: center;
		
		.title
			margin: auto 0 1rem 0;
			color: #e5e5e5;
			font-weight: 500;
			font-size: 130%;
		
		.button
			margin: 4rem 0 auto;
		
		ul
			display: flex;
			padding: 0;
			margin: 0rem 0 auto;
			flex-wrap: wrap;
			justify-content: center;
			li
				margin: 2rem;
				a
					font-size: 260%;
					font-weight: 600;
					transition $transition
					&:hover
						color $specialRed