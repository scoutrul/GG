.goal02
	background-color $white
	z-index 20
	.container
		flex-direction column
		padding: 6rem 0;
		&:before
			content: '02';
			color: #f5f5f5;
			font-weight: bold;
			position: absolute;
			top: 20rem;
			right: -9rem;
			font-size: 32rem;
			letter-spacing: 4rem;
			@media screen and (min-width: 1500px)
				right -15rem
			@media screen and (min-width: 1800px)
				right -25rem
				
		h1
			color: #1d1e1e;
			padding: 2rem 0;
			font-weight: bold;
		.columns
			display flex
			padding-top: 3rem;
			@media screen and (max-width: 680px)
				flex-direction column
				font-size: 150%;
			.left
				width: 29rem;
				padding: 2rem 0;
				font-size: 150%;
				font-weight: 500;
				line-height: 150%;
				color: #c52f13;
			.right
				@media screen and (max-width: 1000px)
					flex: 1 0 60%;
				ul.list
					display flex
					flex-wrap wrap
					padding 0
					justify-content: space-between;
					li.item
						min-width: 13.5rem;
						margin-bottom: 3rem;
						header
							color: $lightgrey
							font-weight: 600;
							font-size: 110%;
						ul.inner
							color: #303131;
							font-size: 110%;
							margin: 1.4rem 0;
							line-height: 160%;
							padding 0
							li
								font-size: 85%;
								font-weight: 500;
