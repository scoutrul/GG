@import '../../node_modules/sanitize.stylus/sanitize.styl'
@import 'kouto-swiss'
@import 'typographic'

meyer-reset()
box-sizing-reset()

edit()



$siteWidth = 1200px
$min-font = 12px
$max-font = 18px
$min-width = 320px
$max-width = $siteWidth

$mainfont = 'Poppins', 'Roboto', 'Halvetica', 'sans-serif'
$line-height-ratio = 1.75
$heading-ratio = $golden
$body-font = $mainfont
$body-font-weight = 300
$body-color = #666
$heading-font = $mainfont
$heading-font-weight = 500
$heading-color = #111
$vertical-rhythm = true
typographic()

$specialRed = #cb1d00
$white = #FFF
$darkgrey = #242424
$darkbg = #121212
$footerbg = #1b1b1b
$goal01 = '../images/index_hat.png'
$goal03 = '../images/index_back.png'


*
	color inherit
	z-index 5
	position relative
	font-family: 'Poppins', sans-serif !important

#app
	display flex 
	flex-direction column

	h1
		color $white 
		font-weight: bold;

	section
		max-width 100%
		width 100%
		flex 1

	.container 
		width 100%
		max-width $siteWidth
		padding 0 10px
		margin auto
		display: flex;
		align-items: flex-start;
		@media screen and (max-width: $siteWidth)
			overflow hidden


	@import 'button.styl'

	@import 'header.styl'
	@import 'footer.styl'

	@import 'goal01.styl'
	@import 'goal02.styl'
	@import 'goal03.styl'
