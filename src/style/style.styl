@import '../../node_modules/sanitize.stylus/sanitize.styl'
@import 'kouto-swiss'
@import 'typographic'

meyer-reset()
box-sizing-reset()

$min-font = 25px
$max-font = 65px
$min-width = $iphone5
$max-width = 1200px

$mainfont = 'Roboto', 'sans-serif'
$line-height-ratio = $golden
$heading-ratio = $golden
$body-font = $mainfont
$body-font-weight = 300
$body-color = #1d1e1e
$heading-font = $mainfont
$vertical-rhythm = true
$specialRed = #cb1d00
$white = #FFF
$darkgrey = #242424
$darkgrey2 = #545454
$darkhover = #2d2d2d

$lightgrey = #d3d3d3
$lightgrey2 = #e5e5e5
$darkbg = #121212
$footerbg = #1b1b1b
$transition = .4s ease
$slide_up_text = .76s ease
$iphone = 320px
$iphoneH = $iphone * 1.5
$iphone5 = 568px
$iphone6 = 667px
$ipad = 768px
$ipadPro = 1024px
$desktop = $max-width
$goal01 = '../images/index_hat.png'
$goal03 = '../images/index_back.png'
typographic()

@import 'choose.styl'
@import 'button.styl'
@import 'hamburger.styl'
@import 'slide_up.styl'

*
	color inherit
	z-index 5
	position relative
	letter-spacing 0.04em !important
html
	max-width: 100vw; //!
	overflow: hidden; //!
	body
		#app
			display: flex
			flex 1 0 auto
			flex-flow column nowrap
			height 100% //!

			section
				width 100%
				min-width 100vw
				flex 1 0 auto
				padding 0 15px

			.container 
				flex 1 0 auto
				margin auto
				display: flex;
				align-items: flex-start;
				max-width: $max-width
				width 100%

			
			@import 'header.styl'
			@import 'footer.styl'
			@import 'index_hero.styl'
			@import 'content.styl'
			


