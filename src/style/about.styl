.about
	background-color $white
	.container
		flex-direction column
		max-height: 67rem;
		height: 100%;
		align-items: center;
		text-align: center;
		justify-content: center
		.title
			color: #1d1e1e;
			margin: 0 0 4rem;
			font-weight: 400;
			word-spacing: .3rem;
			line-height: 125%;
			transition $transition
			
		.link
			letter-spacing: 0.14rem;
			span
				padding: 0.5rem 0;
				transition $transition
				color #545454
				&:after
					content: "";
					display: block;
					width: 100%;
					margin:0.5rem auto
					height: 1px;
					background-color: #545454;
					transition $transition
				&:hover
					cursor pointer
					
					&:after
						width 0%
						background-color: $specialRed
						
					
