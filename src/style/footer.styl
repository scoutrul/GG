.footer
	background-color: $footerbg;
	padding-top 7.5rem
	padding-bottom 6rem
	@media screen and (max-width: $ipad)
		padding-bottom 1rem
		padding-top 3rem
	
	.container
		display flex 
		@media screen and (max-width: $ipad)
			flex-wrap wrap
			justify-content: flex-start;
		
		.footer-slogan
			max-width: 50%;
			width: 100%;
			min-height: 14rem;
			flex: 1 0 10rem;
			.logo
				max-height: 3rem;
				height: 100%;
				img
					height 120%
			h6.footer_title
				margin-top: 3.6rem;
				line-height: 140%;
				font-weight: 500;
				color: $white;
				transition $transition
				
		.footer-menu
			display flex
			flex: 1 0 0;
			@media screen and (max-width: $ipad)
				justify-content: flex-start;
			
			ul
				flex: 1 0 0;
				padding 0
				@media screen and (max-width: $ipad)
					margin 1rem 0 0 0
					min-width 50%
				li
					line-height: 191%;
					font-weight: 600;
					color: $white;
					transition $transition
					font-size 25px
					min-width: 160px;
					&:hover
						color $specialRed
						cursor pointer
		.footer-copy
			display flex
			width: 100%;
			align-items: center;
			margin-top: 5rem;
			.copy
				color $white
				max-width: 50%;
				width: 100%;
			.footer-column
				margin 0 auto 0 0 
				flex: 1 0 50%;	
				font-weight 600
				&:last-child
					margin 0 auto 0 auto
					flex: 1 0 auto;
					display: flex;	
			@media screen and (max-width: $ipad)
				flex-wrap wrap
				.copy
					order 2
					margin-top 3rem
					min-width: 100%;
					font-size: 13px;
		