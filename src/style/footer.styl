.footer
	background-color: $footerbg;
	.container
		display flex 
		margin: 3rem auto;
		
		.footer-slogan
			flex 1 0 50%
		.footer-menu
			display flex
			align-self: center;
			flex 1 0 50%
			ul
				padding: 0 3rem 0 0;
				
		.footer-copy
			display flex
			width: 100%;
			.footer-column:first-child
				margin 0 auto 0 0 
				flex: 1 0 50%;	
			.footer-column:last-child
				margin 0 auto 0 auto
				flex: 1 0 50%;
				display: flex;	
		