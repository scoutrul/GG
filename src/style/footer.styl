.footer
	background-color: $footerbg;
	padding-top 6rem
	padding-bottom 6rem
	@media screen and (max-width: 620px)
		padding-bottom 1rem
		padding-top 3rem
	
	.container
		display flex 
		@media screen and (max-width: 620px)
			flex-wrap wrap
			justify-content: flex-start;
		
		.footer-slogan
			width: 59rem;
			.logo
				max-height: 3rem;
				height: 100%;
				img
					height 100%
			header
				font-size: 210%;
				margin-top: 2.6rem;
				line-height: 140%;
				font-weight: 500;
				color: $white;
		.footer-menu
			display flex
			width 100%
			justify-content: flex-end;
			@media screen and (max-width: 620px)
				flex-wrap: wrap;
				justify-content: flex-start;
			
			ul
				min-width: 13.3rem;
				margin: 1.5rem 0 0 auto;
				padding 0
				@media screen and (max-width: 620px)
					margin 1rem 0 0 0
					min-width 50%
				li
					line-height: 160%;
					font-size: 140%;
					font-weight: 500;
					color: $white;
					&:hover
						color $specialRed
						cursor pointer
		.footer-copy
			display flex
			width: 100%;
			align-items: flex-end;
			margin-top: 4rem;
			@media screen and (max-width: 620px)
				flex-wrap wrap
				.footer-column:first-child
					order 2
					margin-top 3rem
			.footer-column
				margin 0 auto 0 0 
				flex: 1 0 50%;	
				font-weight 500
				&:last-child
					margin 0 auto 0 auto
					flex: 1 0 50%;
					display: flex;	
				.button
					margin: 0 2rem;
					@media screen and (max-width: 620px)
						margin 0
		