.header
	position: absolute;
	@media screen and (min-width: $ipad)
		top 1rem
	top: 0rem;
	z-index: 10;
	font-weight 600
	color #262626
	&.white_header
		color $white
	
	.container
		display flex
		align-items center
		justify-content space-between
		min-height 10em
		flex-flow row wrap
		justify-content center
		.header-column
			display flex
			align-items center
			flex: 1 0 auto;
			margin: 1rem 0;
			min-height 4rem
			.hamburger
				.hamburger-inner
					transition $transition
					background-color $specialRed
					&:before,&:after
						transition $transition
						background-color $specialRed
				@media screen and (max-width: $desktop-1)
					top: 1rem;
				@media screen and (min-width: $desktop+1)
					display none  

				&:hover
					.hamburger-inner
						background-color $white	
						&:before,&:after
							background-color $white						
							
			&.menu
				@media screen and (max-width: $desktop+1)
					min-width: 100%;
				li
					transition $transition
					&:hover
						color $specialRed
						cursor pointer
			&:first-child, &:last-child
				flex: 1 0 auto;
				max-width 310px
			&:last-child
				justify-content: flex-end;
				@media screen and (max-width: $ipad)
					min-width: 100%;
					justify-content: center;
				
			&.top_social
				display none
			.top_menu
				display flex 
				padding 0
				font-weight: 400;
				width: 100%;
				justify-content: center
				margin: 0 2em;	
				li
					font-size: 21px;
					font-weight 400		
					margin: 0 1rem;
					min-width: 100px;
					text-align: center;	
					transition $transition
			.location
				margin: 0 auto 0 3rem
				text-align: center;
				display: flex;
				align-items: center;
				flex-wrap: wrap;
				justify-content: center;
				cursor pointer
				@media screen and (max-width: $ipad)
					display none
				img
					margin: 0 0.5rem;
					width: 16px;
				span
					font-size 85%
					font-weight 300	
					transition: $transition
				&:hover
					span
						color $specialRed
			&.serv
				flex: 0 0 220px;
			&.cart
				justify-content: flex-end;
				display: flex;
				flex: 0 0 220px;
				.top_cart
					text-align: center;
					display: flex;
					align-items: center;
					flex-wrap: wrap
					span
						font-size: 129%;
						font-weight 400
						transition: $transition
					.cart-img
						margin: 1.3rem 1rem 1.3rem 1rem;
						img
							width 20px
							margin auto
					&:hover
						cursor pointer
						span
							color $specialRed			
						
						

	@media screen and (max-width: $desktop)
		.container
			align-items: flex-start;
			margin-top: 1rem;
			overflow auto
			justify-content flex-start
			flex-flow: column wrap;

			.header-column
				&.menu,&.cart 
					display none
				&:first-child
					margin 0
					min-width: 100%;
					flex 0
		&.mobile-menu-active
			position fixed
			width 100%
			height 100%
			background-color #d7d7d7
			z-index 100
			overflow auto
			top 0
			transition: $transition
			.container
				min-height 100vh
			* 
				text-transform: none;
				
			.header-column
				max-width: 100%;
				flex 1
				&.menu,&.cart 
					display block
				.hamburger
					display block
					.hamburger-inner
						background-color $specialRed
						&:before,&:after
							background-color $specialRed
				
				&:last-child
					justify-content: flex-start;
					margin: 3rem 0;
					
				&.serv
					position fixed
					top 0
				&.menu
					display: flex;
					margin 5rem 0 0
					flex 0 0 auto
					.top_menu
						margin: 0;
						justify-content: flex-start;
						flex-flow column wrap
						li
							width 100%
							margin 0
							text-align: left;
				&.cart
					display flex
					margin 0
					align-items: flex-start;
					margin 2rem 0
					.top_cart
						justify-content: flex-start;
						flex-direction: row-reverse;
						span
							&:hover
								color #FFF
						.cart-img
							margin: 0 .5rem !important
				&.top_social
					display flex
					order 4
					margin auto 0 3rem 0
					ul
						display flex
						flex-flow column wrap
						padding 0
						font-weight 600
						padding 0
						li
							&:hover
								color #FFF
				.logo
					display none
				.location
					display block
					margin-right: auto;
					margin-left: 0;
					img
						margin-left 0
			.menu,.cart,.top_social
				*
					color #000
					

			
		@media all and (orientation: landscape)
			.top_social
				position: absolute;
				right: 2rem;
				bottom: 2rem;
				margin 0 !important
				ul
					position: absolute;
					right: 0;
					bottom: 0;
			.cart
				margin 0 0 2rem 0 !important
				align-items: flex-end !important
				flex 0
			.menu 
				flex 1 1 auto

			@media all and (min-width $iphone)
				.cart
					span
						font-size 140% !important
						font-weight 600 !important
				.menu 
					*
						font-size 140% !important
						font-weight 600 !important
				.top_social
					li
						font-size 120% !important
						font-weight 600 !important
			
			@media all and (min-height $iphoneH)
				.cart
					span
						font-size 220% !important
				.menu 
					*
						font-size 180% !important
				.top_social
					li
						font-size 180% !important