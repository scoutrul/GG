.header
	position: absolute;
	z-index: 10;
	font-weight 600
	letter-spacing: 0.05rem;
	font-size: .9rem;
	color $white
	.container
		display flex
		align-items center
		justify-content space-between
		min-height 10em
		flex-wrap wrap
		justify-content center
		.header-column
			display flex
			align-items center
			flex: 1 0 auto;
			margin: 20px 0;
			.hamburger
				display none
			&.menu
				@media screen and (max-width: 620px)
					min-width: 100%;
			&:first-child, &:last-child
				flex: 1 0 auto;
				max-width 310px
			&:last-child
				justify-content: flex-end;
				@media screen and (max-width: 620px)
					min-width: 100%;
					justify-content: center;
				
			&:last-child, &:first-child
				@media screen and (max-width: 640px)
					flex 0
			.top_menu
				display flex 
				padding 0
				text-transform uppercase
				width: 100%;
				justify-content: space-around
				margin: 0 2em;
				li
					padding: 0 5px
				
					
			.header-location
				margin: 0 2em 0 15%
				color #626262
				text-align: center;
				display: flex;
				align-items: center;
				flex-wrap: wrap;
				justify-content: center;
				img
					margin: 0 .5rem
				span.name
					font-size 75%
			.top_cart
				text-align: center;
				text-transform uppercase
				display: flex;
				align-items: center;
				justify-content center
				flex-wrap: wrap
				.cart-img
					background-color $specialRed
					border-radius: 50%;
					padding: 0.8rem;
					margin: 0.5rem;
					img
						filter: brightness(10);

	@media screen and (max-width: 480px)
		&.active
			position absolute
			width 100%
			height 100%
			background-color #d7d7d7
			z-index 100
			padding: 2rem 4rem;
			font-size 345%
			* 
				text-transform: none;
			.header-column
				max-width: 100%;
				flex 1
				.hamburger
					display block
				&:first-child
					max-width 100%
					flex 1
				&:last-child
					justify-content: flex-start;
					margin: 3rem 0;
					
				&.menu
					order 3
				.top_menu
					flex-wrap wrap
					margin 0
					li
						width 100%
				.header-logo
					display none
				.header-location
					margin-right: auto;
					margin-left: 0;
