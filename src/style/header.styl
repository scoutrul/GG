.header
	position: absolute;
	z-index: 10;
	font-weight 600
	letter-spacing: 0.05rem;
	color $white
	.container
		display flex
		align-items center
		justify-content space-between
		min-height 10em
		flex-wrap wrap
		justify-content center
		.top_social
			display none
		.header-column
			display flex
			align-items center
			flex: 1 0 auto;
			margin: 1rem 0;
			min-height 61px
			.hamburger
				@media screen and (min-width: 580px)
					display none
				@media screen and (max-width: 580px)	
					.hamburger-inner
						background-color #FFF
						&:before,&:after
							background-color #FFF
							
			&.menu
				@media screen and (max-width: 620px)
					min-width: 100%;
				li:hover
					color $specialRed
					cursor pointer
			&:first-child, &:last-child
				flex: 1 0 auto;
				max-width 310px
			&:last-child
				justify-content: flex-end;
				@media screen and (max-width: 620px)
					min-width: 100%;
					justify-content: center;
				
			// &:last-child, &:first-child
			// 	@media screen and (max-width: 640px)
			// 		flex 0
			.top_menu
				display flex 
				padding 0
				font-weight: 400;
				width: 100%;
				justify-content: space-around
				margin: 0 2em;	
				li
					font-size: 140%;
					font-weight 400		
					margin: 0 0.3rem;	
			.location
				margin: 0 auto 0 3rem
				color #626262
				text-align: center;
				display: flex;
				align-items: center;
				flex-wrap: wrap;
				justify-content: center;
				img
					margin: 0 0.5rem;
					width: 16px;
				span.name
					font-size 85%
					color $white
					font-weight 300			
					
				@media screen and (max-width: 580px)
					margin 0 auto 0 1rem
					img
						display none
			&.cart
				justify-content: flex-end;
				.top_cart
					text-align: center;
					display: flex;
					align-items: center;
					flex-wrap: wrap
					.cart-img
						margin: 1.3rem .7rem 1.3rem 2rem
						img
							width 20px
					span
						font-size: 130%;
						font-weight 400			
						
						

	@media screen and (max-width: 580px)
		.container
			align-items: flex-start;
			margin-top: 1rem;
			overflow auto
			justify-content flex-start
			height: 100%;
			.header-column
				&.menu,&.cart 
					display none
				&:first-child
					margin 0
					min-width: 100%;
		&.mobile-menu-active
			position fixed
			width 100%
			height 100%
			background-color #d7d7d7
			z-index 100
			padding: 0 3rem
			font-size 145%
			overflow auto
			* 
				text-transform: none;
				
			.top_social
				display flex
				flex-direction column
				padding 0
				font-size 100%
				font-weight 600
				order 4
				padding 0
				margin auto 0 3rem 0
				color #000
				li
					&:hover
						color #FFF
			.header-column
				max-width: 100%;
				flex 1
				&.menu,&.cart 
					display block
				.hamburger
					display block
					.hamburger-inner
						background-color #333
						&:before,&:after
							background-color #333
							
				&:first-child
					max-width 100%
					flex 1
				&:last-child
					justify-content: flex-start;
					margin: 3rem 0;
				&.menu
					order 3
					margin auto 0
				&.cart
					.top_menu
						flex-wrap wrap
						margin 0
						justify-content: flex-start;
						li
							width 100%
							line-height 120%
							&:hover
								color #FFF
				.top_cart
					justify-content: flex-start;
					span:hover
						color #FFF
				.logo
					display none
				.header-location
					margin-right: auto;
					margin-left: 0;
					img
						display block
				&.menu,&.cart
					*
						color #000
				&.menu .top_menu
					font-size 200%
					margin: 0;
					justify-content: flex-start;
					flex-wrap wrap
					li
						width 100%

				&.cart 
					font-size 130%
					margin 0

		