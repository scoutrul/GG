.header
	position: absolute;
	@media screen and (min-width: $ipad)
		top 1rem
	top: 0rem;
	z-index: 10;
	font-weight 600
	color $white
	
	.container
		display flex
		align-items center
		justify-content space-between
		min-height 10em
		flex-wrap wrap
		justify-content center
		.top_social
			display none
		.header-column
			display flex
			align-items center
			flex: 1 0 auto;
			margin: 1rem 0;
			min-height 4rem
			.hamburger
				.hamburger-inner
					transition $transition
					background-color $specialRed
					&:before,&:after
						transition $transition
						background-color $specialRed
				@media screen and (max-width: $desktop-1)
					top: 1rem;
				@media screen and (min-width: $desktop+1)
					display none  

				&:hover
					.hamburger-inner
						background-color $white	
						&:before,&:after
							background-color $white						
							
			&.menu
				@media screen and (max-width: $desktop+1)
					min-width: 100%;
				li
					transition $transition
					&:hover
						color $specialRed
						cursor pointer
			&:first-child, &:last-child
				flex: 1 0 auto;
				max-width 310px
			&:last-child
				justify-content: flex-end;
				@media screen and (max-width: $ipad)
					min-width: 100%;
					justify-content: center;
				
			.top_menu
				display flex 
				padding 0
				font-weight: 400;
				width: 100%;
				justify-content: space-around
				margin: 0 2em;	
				li
					font-size: 129%;
					font-weight 400		
					margin: 0 0.4rem;	
			.location
				margin: 0 auto 0 3rem
				color #626262
				text-align: center;
				display: flex;
				align-items: center;
				flex-wrap: wrap;
				justify-content: center;
				cursor pointer
				@media screen and (max-width: $ipad)
					display none
				img
					margin: 0 0.5rem;
					width: 16px;
				span
					font-size 85%
					color $white
					font-weight 300	
					transition: $transition
				&:hover
					span
						color $specialRed
			&.cart
				justify-content: flex-end;
				display: flex;
				.top_cart
					text-align: center;
					display: flex;
					align-items: center;
					flex-wrap: wrap
					span
						font-size: 129%;
						font-weight 400
						transition: $transition
					.cart-img
						margin: 1.3rem 1rem 1.3rem 1rem;
						img
							width 20px
							margin auto
					&:hover
						cursor pointer
						span
							color $specialRed			
						
						

	@media screen and (max-width: $desktop)
		.container
			align-items: flex-start;
			margin-top: 1rem;
			overflow auto
			justify-content flex-start
			flex-direction: column;

			.header-column
				&.menu,&.cart 
					display none
				&:first-child
					margin 0
					min-width: 100%;
					flex 0
		&.mobile-menu-active
			position fixed
			width 100%
			height 100%
			background-color #d7d7d7
			z-index 100
			font-size 145%
			overflow auto
			top 0
			padding-top: 4rem;
			@media screen and (max-width: $ipad)
				padding-top 0
			.container
				min-height 100vh
			* 
				text-transform: none;
				
			.top_social
				display flex
				flex-direction column
				padding 0
				font-size 100%
				font-weight 600
				order 4
				padding 0
				margin auto 0 3rem 0
				color #000
				li
					&:hover
						color #FFF
			.header-column
				max-width: 100%;
				flex 1
				&.menu,&.cart 
					display block
				.hamburger
					display block
					.hamburger-inner
						background-color $specialRed
						&:before,&:after
							background-color $specialRed
				
				&:last-child
					justify-content: flex-start;
					margin: 3rem 0;
				&.menu
					display: flex;
					margin auto 0
					flex 1 0 auto
					.top_menu
						font-size 200%
						margin: 0;
						justify-content: flex-start;
						flex-wrap wrap
						li
							width 100%
				&.cart
					display flex
					margin 0
					.top_cart
						justify-content: flex-start;
						flex-direction: row-reverse;
						span:hover
							color #FFF
						.cart-img
							margin: 0 .5rem !important
				.logo
					display none
				.location
					display block
					margin-right: auto;
					margin-left: 0;
				&.menu,&.cart
					*
						color #000
						font-size 130%
						

		