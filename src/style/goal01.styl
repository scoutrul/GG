.goal01
	background-color $darkbg
	.container
		flex-direction column
		max-height: 1600px;
		height 90vh
		min-height 900px
		@media screen and (max-width: 620px)
			height 100vh
		
		&:before
			content: '01';
			color #1a1a1a
			font-weight bold
			position: absolute;
			top: 7rem;
			left: -5rem;
			font-size: 37rem;
			letter-spacing: 4rem;
			@media screen and (max-width: 620px)
				top: 20%
		&:after
			content: '';
			position: absolute;
			top: 3rem;
			right: -8rem;
			background: url($goal01) no-repeat;
			background-size: contain;
			background-position: 100% 50%;
			height: 100%;
			max-width: 100%;
			width: 930px;
			z-index: 6;
			
			@media screen and (min-width: 1500px)
				width: 1080px
			
		.screener
			font-weight 500
			padding: 10rem 0 0 0;
			z-index 10
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			justify-content: center;
			max-width: 70%
			height: 100%;

			@media screen and (max-width: 620px)
				max-width: 100%;
				padding 0

			@media screen and (max-width: 340px)
				font-weight 400
			h1
				font-weight: 600;
				font-size: 445%;
				line-height: 123%;
				letter-spacing: -0.13rem
				margin: auto;
				@media screen and (max-width: 620px)
					margin auto
				@media screen and (max-width: 340px)
					max-width: 100%;
					margin: 12rem 0 0 0;
					
			.button
				margin: 4rem 0 5rem 0


