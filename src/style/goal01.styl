.goal01
	background-color $darkbg
	.container
		flex-direction column
		height: 1080px

		&:before
			content: '01';
			color #1a1a1a
			font-weight bold
			position: absolute;
			top: 6rem;
			left: -5rem;
			font-size: 37rem;
			letter-spacing: 4rem;
			@media screen and (max-width: 620px)
				top: 20%
		&:after
			content: '';
			position: absolute;
			top: 1rem;
			right: -8rem;
			background: url($goal01) no-repeat;
			background-size: contain;
			background-position: 100% 50%;
			height: 100%;
			max-width: 100%;
			width: 930px;
			z-index: 6;
			
		.screener
			font-weight 500
			margin: auto 0;
			z-index 10
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			justify-content: center;
			max-width: 70%
			height: 100%;

			@media screen and (max-width: 620px)
				max-width: 100%;
				margin 10rem 0 0 0
			@media screen and (max-width: 340px)
				font-weight 400
				
			
			h1
				font-weight: 600;
				font-size: 435%;
				line-height: 123%;
				letter-spacing: -0.13rem
				margin: 20rem auto auto auto;
				@media screen and (max-width: 620px)
					margin auto
				@media screen and (max-width: 340px)
					max-width: 100%;
					margin: 12rem 0 0 0;
					
			.button
				margin: 10em 0;


