.goal03
	background-color $darkbg
	.container
		flex-direction: column;
		min-height: 32rem;
		padding: 0 6.5rem;
		@media screen and (max-width: 620px)
			padding: 0
		
		&:before
			content: '03';
			color: #242424;
			font-weight: bold;
			position: absolute;
			top: 2rem;
			left: -3rem;
			font-size: 32rem;
			letter-spacing: 4rem;
		&:after
			content: '';
			position: absolute;
			bottom: 0;
			right: 6rem;
			background: url(../images/index_back.png) no-repeat;
			background-size: contain;
			background-position: 100% 50%;
			height: 100%
			width: 100%;
			@media screen and (max-width: 620px)
				right: -6rem;
		h1
			color: #fff;
			font-weight: 600;
			line-height: 160%;
			letter-spacing: 0.10rem;
			margin: 12rem 0 0 0;
		.button
			margin: 2.5rem 0 auto 0;
			

