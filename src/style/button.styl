.button
	display: flex;
	align-items: center;
	border-radius: 10rem;
	min-height: 3.8rem;
	max-width: 15rem;
	width: 100%;
	padding 0 2rem
	background-color $specialRed
	transition $transition
	justify-content: flex-start
	span
		white-space: nowrap;
		color: #fff;
		font-weight: 400;
		font-size: 18px;
		&:after
			content ''
			padding: 0 0 0 3rem;
			display: inline-block;
			transition $transition
			background-image: url(/images/icon_arrow.svg);
			background-repeat: no-repeat;
			background-position: 100%;
			width: 10px;
			height: 10px;
	&:hover
		cursor pointer
		background-color #2d2d2d
		max-width: 16rem;
		span
			&:after
				padding: 0 0 0 4rem;
				color $white
	

