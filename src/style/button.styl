.button
	display: flex;
	align-items: center;
	justify-content: space-around;
	border-radius: 3rem;
	text-transform: uppercase;
	font-size: 0.7rem;
	line-height: 550%;
	min-height: 3.5rem;
	justify-content: center;
	color: #fff;
	letter-spacing: 0.18rem;
	font-size: 60%;
	font-weight: 300;
	max-width: 13.5rem;
	width: 100%;
	&.red
		background-color $specialRed
	span
		padding: 0 1rem;
		white-space: nowrap;
		&:after
			content '>'
			padding: 0 0 0 0.4rem;
	

