.content
	min-height: 100vh;
	display flex
	.container
		margin 11rem auto 8rem
		flex-flow: column wrap;
		align-self: center;
		.link_under
			padding: 0.5rem 0;
			transition $transition
			color #545454
			font-size 2rem
			@media screen and (max-width: $ipad)
				font-size 80%
			@media screen and (max-width: $iphone5)
				font-size 60%
			&:after
				content: "";
				display: block;
				width: 100%;
				margin:0.5rem auto
				height: 1px;
				background-color: #545454;
				transition $transition
			&:hover
				cursor pointer
				color $specialRed
				&:after
					width 0%
					background-color: $specialRed

	&.in-cart
		.container
			align-items: center;
			justify-content: center;
			margin: auto;
			height: 100%;
			.title
				color $lightgrey2
				margin 2rem auto
				font-weight: 400;
	&.about
		.container
			height: 100%;
			flex-direction column
			align-items: center;
			text-align: center;
			justify-content: center
			min-height 70rem
			margin auto
			.title
				margin: 0 0 4rem;
				font-weight: 900;
				text-transform uppercase
				word-spacing: .3rem;
				line-height: 90%;
				transition $transition
				span
					display block