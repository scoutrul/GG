section.mobile_menu
	z-index: 0;
	visibility: hidden;
	opacity: 0;
	position fixed
	width 100%
	height 100%
	background-color #d7d7d7
	z-index 100
	overflow auto
	top 0
	transition: .1s ease-out
	padding 2rem 0
	
	&.mobile_menu-active
		visibility: visible;
		opacity: 1;
		z-index: 20;
		
	landscape()
		@media all and (orientation: landscape)
			& and (max-width: $ipadPro)
			& and (max-width: $ipad)
			& and (max-width: $iphone5)
				font-size 100%
		
	portrait()
		@media all and (orientation: portrait)
			& and (max-width: $ipadPro) 
			& and (max-width: $ipad)
			& and (max-width: $iphone)
				font-size 100%

