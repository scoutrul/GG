section.mobile_menu
	@media all and (min-width: $desktop)
		display none
	z-index: 0;
	visibility: hidden;
	opacity: 0;
	position fixed
	width 100%
	height 100%
	background-color #d7d7d7
	overflow auto
	top 0
	transition: .1s ease-out
	&.mobile_menu-active
		visibility: visible;
		opacity: 1;
		z-index: 20;
		@media all and (max-width: $iphone5)
			font-size: 70%;
	.container
		flex-flow: row wrap;
		padding $overpadding
		align-content: space-between;
		height: 100%;
		.location
			display: flex;
			flex: 1 1 100%;
			text-align: center;
			align-items: center;
			cursor pointer
			img
				margin: 0 10px 0 0
				width: .3rem;
				height: .3rem;
			span
				font-size: 23%;
				font-weight: 500;
				@media all and (max-width: $iphone5)
					font-size: 53%;
				
			&:hover
				span
					color $specialRed
		.mobile_menu_list
			padding 0
			margin 1rem 0
			flex: 1 1 60%;
			li
				font-size: 125%;
				font-weight: 900;
				line-height: 120%;
		.mobile_menu_cart
			padding 0
			flex: 1 1 100%;
			order: 2;
			
			li.cart_container
				font-size: 125%;
				font-weight: 900;
				line-height: 120%;
				text-align: center;
				display: flex;
				.inner
					display flex
					align-items center
					img
						order: 1;
						width: 0.9rem;
						height: 0.9rem;
						margin: auto 0.6rem;
				&:hover
					cursor pointer
					a
						color $specialRed	
		.mobile_social_list
			padding 0
			margin 1rem 0
			min-width: 150px;
			li
				font-size: 75%;
				font-weight: 600;
				line-height: 150%;
		
