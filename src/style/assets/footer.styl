section.footer
	background-color: $footerbg;
	padding-top 1.9rem
	
	.container
		display flex 
		@media screen and (max-width: $iphoneH)
			flex-flow: row wrap;	
		.footer-title
			min-width: 7rem
			max-width: 50%;
			width: 100%;
			flex: 1 0 auto;
			margin-bottom: 1rem;
			.footer-slogan
				font-weight: 900;
				color: $white;
				transition $transition

		.footer-menu
			display flex
			flex: 1 0 auto;
			ul
				flex: 1 0 auto;
				padding 0
				a
					line-height: 0.79rem;
					font-weight: 600;
					color: $white;
					transition $transition
					font-size: 40%;
					min-width: 3rem;
					display: inline-block;
					&:hover
						color $specialRed
						cursor pointer
	
		.footer-copy
			display flex
			width: 100%;
			align-items: center;
			margin .5rem 0 .5rem 0
			flex-flow row wrap
			.copy
				color #505050
				font-size 25%
				max-width: 50%;
				width: 100%;
				flex: 1 1 auto;
			.footer-column
				margin 0 auto 0 0 
				flex: 1 0 50%;	
				font-weight 600
				&.footer-button
					margin 0 auto 0 auto
					flex: 1 1 auto;
					display: flex;	


		