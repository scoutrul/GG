.slide_up_text // animation for text appear
	*
		overflow hidden
		display block
		transform: translate(0, 150%)
		transition $slide_up_text
		transition-delay: 0s;
		
	&.slide_up_text--active
		*
			display block
			transition $slide_up_text
			transform: translate(0, 0%)
		> li, > div
			&:nth-child(1)
				span
					transition-delay: 0s
		> li, > div
			&:nth-child(2)
				span
					transition-delay: 0.2s
		> li, > div
			&:nth-child(3)
				span
					transition-delay: 0.4s
		> li, > div
			&:nth-child(4)
				span
					transition-delay: 0.6s
		> li, > div
			&:nth-child(5)
				span
					transition-delay: 0.8s
		> li, > div
			&:nth-child(6)
				span
					transition-delay: 0.10s
		> li, > div
			&:nth-child(7)
				span
					transition-delay: 0.12s
		> li, > div
			&:nth-child(8)
				span
					transition-delay: 0.14s
		> li, > div
			&:nth-child(9)
				span
					transition-delay: 0.16s