section.content
	display flex
	min-height: 100%;
	padding: 3rem 0;
	.container
		flex-flow: column wrap;
		align-self: center
	&.index-about
		.container
			height: 100%;
			flex-direction column
			align-items: center;
			text-align: center;
			justify-content: center
			min-height 600px
			margin auto
			.title
				margin: 0 0 1.3rem;
				font-weight: 300;
				line-height: 115%;
				transition $transition
				font-size: 140%;
			.link_under
				text_underscore(#DDD, $darkgrey2)
				font-size 70%
				